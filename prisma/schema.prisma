generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Project {
  name         String               @id
  usageRecords ProjectUsageRecord[]
  jobs         Job[]
}

model Job {
  name        String  @id
  projectName String
  project     Project @relation(references: [name], fields: [projectName])
  tasks       Task[]
}

model Task {
  name          String
  jobName       String
  job           Job         @relation(references: [name], fields: [jobName])
  logRecords    LogRecord[]
  @@unique([name, jobName])
}

model LogRecord {
  id      Int      @id @default(autoincrement())
  jobName  String
  taskName  String
  task    Task     @relation(references: [name, jobName], fields: [taskName, jobName])
  message String
  time    DateTime
  file    String
  type    String
  help    String
}

model BladeUsageRecord {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  busy        Int      @default(0)
  free        Int      @default(0)
  nimby       Int      @default(0)
  off         Int      @default(0)
  noFreeSlots Int      @default(0)
}

model ProjectUsageRecord {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  projectName String
  project     Project  @relation(references: [name], fields: [projectName])
  usage       Int
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  name         String               @id
  usageRecords ProjectUsageRecord[]
  jobs         Job[]
}

model Job {
  id          String
  projectName String
  project     Project @relation(references: [name], fields: [projectName])
  tasks       Task[]
  @@unique([id, projectName])
}

model Task {
  id          String
  jid           String
  projectName String
  job           Job         @relation(references: [id, projectName], fields: [jid, projectName])
  logRecords    LogRecord[]
  @@unique([id, jid, projectName])
}

model LogRecord {
  id      Int      @id @default(autoincrement())
  jid     String
  tid     String
  projectName String
  task    Task     @relation(references: [id, jid, projectName], fields: [tid, jid, projectName])
  message String
  artist  String
  time    DateTime
  file    String
  type    String
  help    String
}

model BladeUsageRecord {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  busy        Int      @default(0)
  free        Int      @default(0)
  nimby       Int      @default(0)
  off         Int      @default(0)
  noFreeSlots Int      @default(0)
}

model ProjectUsageRecord {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  projectName String
  project     Project  @relation(references: [name], fields: [projectName])
  usage       Int
}
